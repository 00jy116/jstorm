		</dependency>
		<dependency>
		  <groupId>org.apache.zookeeper</groupId>
		  <artifactId>zookeeper</artifactId>
		  <version>3.3.3-cdh3u0</version>
		</dependency>
		<dependency>
			<groupId>backtype</groupId>
